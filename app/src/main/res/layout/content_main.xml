<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_gravity="center">

    <Button
        android:id="@+id/button_full_screen_hints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full screen hints"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/button_target_hints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Target hints"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_below="@id/button_full_screen_hints"
        android:layout_centerHorizontal="true"/>


    <Button
        android:id="@+id/button_custom_hints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom hints"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_below="@id/button_target_hints"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>

